            <Button x:Name="btn_C" Grid.Column="0" Grid.Row="3" Content="C" HorizontalAlignment="Stretch" Margin="2,2,2,2" VerticalAlignment="Stretch" Click="btn_Ok_Click" />
            <Button x:Name="btn_0" Grid.Column="1" Grid.Row="3" Content="0" HorizontalAlignment="Stretch" Margin="2,2,2,2" VerticalAlignment="Stretch" Click="btn_Ok_Click" />
            <Button x:Name="btn_Ok" Grid.Column="2" Grid.Row="3" Content="Ok" HorizontalAlignment="Stretch" Margin="2,2,2,2" VerticalAlignment="Stretch" Click="btn_Ok_Click" />
