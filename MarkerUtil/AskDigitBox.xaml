            </Grid.RowDefinitions>
            <Button x:Name="btn_7" Grid.Column="0" Grid.Row="0" Content="7" HorizontalAlignment="Stretch" Margin="2,2,2,2" VerticalAlignment="Stretch"  Click="btn_Ok_Click" VerticalContentAlignment="Center" />
